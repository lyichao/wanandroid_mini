/* pages/nav/nav.wxss */
.page {
  display: flex;
  flex-direction: row;
}

.left {
  width: 35%;
  height: 400rpx;
}

.navItem {
  border: 1rpx white solid;
  border-left-width: 10rpx;
  border-left-color: #4CAF50;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 30rpx 0rpx;
  background-color:#f3f3f3;
}

.leftText {
  color: #4CAF50;
}

.detialItem {
  /* border: 1rpx red solid; */
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.rightText{
  background-color: #f3f3f3;
  text-align: center;
  border: 0rpx white solid;
  padding: 30rpx 20rpx;
  margin-left: 2rpx;
  width: 42%;
  border-bottom-width: 1rpx;
  border-radius: 5rpx;
  overflow:hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
}